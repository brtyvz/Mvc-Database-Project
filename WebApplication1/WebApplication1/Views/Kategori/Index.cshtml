@using WebApplication1.Models.Entity
@using PagedList 
@using PagedList.Mvc;
@model PagedList.IPagedList<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered" >
    <tr>

        <th>KATEGORI ID</th>
        <th>KATEGORI AD</th>
        <th>SIL</th>
        <th>GUNCELLE</th>

    </tr>
<tbody>
    @foreach(var ktgr in Model)
    {
    <tr>
        <td>@ktgr.KATEGORIID</td>
        <td>@ktgr.KATEGORIAD</td>
        <td><a href="/Kategori/SIL/@ktgr.KATEGORIID" class="btn btn-danger">SIL</a></td>
        <td><a href="/Kategori/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">GUNCELLE</a></td>

    </tr>
    }

</tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index",new { sayfa }));
<a href="/Kategori/YeniKategori/" class="btn btn-primary">Yeni Kategori</a>
